<Window x:Class="Recipes.TablesViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Святкові столи" Height="450" Width="670">
    <Grid>
        
        <DataGrid x:Name="dgTables" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="10">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва столу" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Рецепти" Binding="{Binding Recipes}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>